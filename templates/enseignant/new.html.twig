{% extends 'base.html.twig' %}

{% block title %}Ajouter un Enseignant{% endblock %}

{% block body %}
{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

<div class="mb-3">
    {{ form_label(form.utilisateur, 'Utilisateur', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.utilisateur, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="mb-3">
    {{ form_label(form.typeEnseignant, 'Type Enseignant', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.typeEnseignant, {'attr': {'class': 'form-control'}}) }}
</div>


{{ form_end(form) }}

{% endblock %}
