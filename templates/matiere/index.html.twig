{% extends 'base.html.twig' %}

{% block title %}Matiere{% endblock %}

{% block body %}
    <h1>Matiere</h1>

    <table class="table">
        <thead>
            <tr>
                <th>utilisateur ID</th>
                <th>Nom</th>
                <th>Volume_horaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for matiere in matieres %}
            <tr>
                <td>{{ matiere.id }}</td>
                <td>{{ matiere.name }}</td>
                <td>{{ matiere.volumeHoraire }}</td>
                <td>
                    <a href="{{ path('app_matiere_show', {'id': matiere.id})}}" class="btn btn-info">show</a>
                    <a href="{{ path('app_matiere_edit', {'id': matiere.id})}}" class="btn btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_matiere_new')}}" class="btn btn-success">Ajouter matiere</a>
{% endblock %}
