{% extends 'base_login.html.twig' %}

{% block body %}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Ajuste pour un alignement vertical parfait */
    }

    .login-container {
        max-width: 400px;
        background: #fff;
        padding: 20px 30px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h1 {
        font-size: 1.8em;
        margin-bottom: 20px;
        color: #333;
    }

    .alert {
        margin-bottom: 20px;
        padding: 10px;
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
        border-radius: 5px;
        font-size: 0.9em;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    label {
        font-size: 0.9em;
        color: #555;
        text-align: left;
    }

    input {
        padding: 10px;
        font-size: 1em;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 100%;
    }

    button {
        padding: 10px;
        font-size: 1em;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    button:hover {
        background-color: #0056b3;
    }

    a {
        margin-top: 15px;
        display: inline-block;
        font-size: 0.9em;
        color: #007bff;
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }
</style>



<div class="container mt-5">
    <div class="card mx-auto" style="max-width: 400px;">
        <div class="card-body">
            <h1 class="card-title text-center">Connexion</h1>
             {% if error %}
                <div class="alert alert-danger">
                    Identifiants invalides
                </div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Nom d'utilisateur :</label>
                    <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Mot de passe :</label>
                    <input type="password" id="password" name="_password" class="form-control" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="btn btn-primary w-100">Se connecter</button>
            </form>



        </div>
    </div>
</div>
<script>
    console.log("üöÄ D√©but du script de debug en JS");


    {% if error %}
        console.error("üî¥ Erreur de connexion d√©tect√©e :", {{ error|json_encode|raw }});
    {% else %}
        console.log("‚úÖ Aucune erreur d'authentification d√©tect√©e.");
    {% endif %}

    console.log("üü¢ Dernier username utilis√© :", {{ last_username|json_encode|raw }});

    console.log("üì° Envoi du formulaire test√©...");
    document.querySelector('form')?.addEventListener('submit', function(event) {
        console.log("üì§ Formulaire soumis !");
    });

    console.log("üîç V√©rification des cookies : ", document.cookie);

    console.log("üéØ V√©rification des headers de requ√™te...");
    fetch(window.location.href, {
        method: "GET"
    }).then(response => {
        console.log("üì• R√©ponse HTTP Status :", response.status);
        console.log("üì° Headers :", [...response.headers]);
    }).catch(error => console.error("‚ö†Ô∏è Erreur lors de la requ√™te :", error));

    console.log("üöÄ Fin du script de debug en JS");
</script>

{% endblock %}
